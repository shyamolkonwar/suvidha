{
    "dashboard": {
        "title": "SUVIDHA System Overview",
        "tags": [
            "suvidha",
            "overview"
        ],
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "title": "Services Health",
                "type": "stat",
                "targets": [
                    {
                        "expr": "up{job=~\".*-service\"}",
                        "legendFormat": "{{ job }}"
                    }
                ],
                "gridPos": {
                    "x": 0,
                    "y": 0,
                    "w": 24,
                    "h": 4
                }
            },
            {
                "id": 2,
                "title": "Request Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(http_requests_total[5m])",
                        "legendFormat": "{{ job }} - {{ method }}"
                    }
                ],
                "gridPos": {
                    "x": 0,
                    "y": 4,
                    "w": 12,
                    "h": 8
                }
            },
            {
                "id": 3,
                "title": "Error Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
                        "legendFormat": "{{ job }} - Errors"
                    }
                ],
                "gridPos": {
                    "x": 12,
                    "y": 4,
                    "w": 12,
                    "h": 8
                }
            },
            {
                "id": 4,
                "title": "Response Time (p95)",
                "type": "graph",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
                        "legendFormat": "{{ job }}"
                    }
                ],
                "gridPos": {
                    "x": 0,
                    "y": 12,
                    "w": 12,
                    "h": 8
                }
            },
            {
                "id": 5,
                "title": "CPU Usage",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(process_cpu_seconds_total[5m]) * 100",
                        "legendFormat": "{{ job }}"
                    }
                ],
                "gridPos": {
                    "x": 12,
                    "y": 12,
                    "w": 12,
                    "h": 8
                }
            },
            {
                "id": 6,
                "title": "Memory Usage",
                "type": "graph",
                "targets": [
                    {
                        "expr": "process_resident_memory_bytes / 1024 / 1024",
                        "legendFormat": "{{ job }}"
                    }
                ],
                "gridPos": {
                    "x": 0,
                    "y": 20,
                    "w": 12,
                    "h": 8
                }
            },
            {
                "id": 7,
                "title": "Database Connections",
                "type": "graph",
                "targets": [
                    {
                        "expr": "pg_stat_database_numbackends",
                        "legendFormat": "{{ datname }}"
                    }
                ],
                "gridPos": {
                    "x": 12,
                    "y": 20,
                    "w": 12,
                    "h": 8
                }
            }
        ]
    }
}