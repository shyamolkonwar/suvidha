# Environment Configuration Template
# Copy this file to .env and update with your actual values

# ==========================================
# APPLICATION SETTINGS
# ==========================================
NODE_ENV=development
APP_NAME=SUVIDHA_Kiosk_System
APP_VERSION=1.0.0

# ==========================================
# API GATEWAY
# ==========================================
API_GATEWAY_PORT=8000
API_GATEWAY_HOST=0.0.0.0

# ==========================================
# AUTH SERVICE
# ==========================================
AUTH_SERVICE_PORT=8001
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=7d
BCRYPT_ROUNDS=10

# ==========================================
# UTILITY SERVICE
# ==========================================
UTILITY_SERVICE_PORT=8002

# ==========================================
# PAYMENT SERVICE
# ==========================================
PAYMENT_SERVICE_PORT=8003
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
PAYMENT_CURRENCY=INR

# ==========================================
# GRIEVANCE SERVICE
# ==========================================
GRIEVANCE_SERVICE_PORT=8004

# ==========================================
# NOTIFICATION SERVICE
# ==========================================
NOTIFICATION_SERVICE_PORT=8005
NOTIFICATION_WS_PORT=8006

# ==========================================
# KIOSK MONITOR SERVICE
# ==========================================
KIOSK_MONITOR_PORT=8007

# ==========================================
# CMS SERVICE
# ==========================================
CMS_SERVICE_PORT=8008

# ==========================================
# ANALYTICS SERVICE
# ==========================================
ANALYTICS_SERVICE_PORT=8009

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# Auth Database
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5432
AUTH_DB_NAME=auth_db
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=auth_password

# Utility Database
UTILITY_DB_HOST=localhost
UTILITY_DB_PORT=5432
UTILITY_DB_NAME=utility_db
UTILITY_DB_USER=utility_user
UTILITY_DB_PASSWORD=utility_password

# Payment Database
PAYMENT_DB_HOST=localhost
PAYMENT_DB_PORT=5432
PAYMENT_DB_NAME=payment_db
PAYMENT_DB_USER=payment_user
PAYMENT_DB_PASSWORD=payment_password

# Grievance Database
GRIEVANCE_DB_HOST=localhost
GRIEVANCE_DB_PORT=5432
GRIEVANCE_DB_NAME=grievance_db
GRIEVANCE_DB_USER=grievance_user
GRIEVANCE_DB_PASSWORD=grievance_password

# Kiosk Monitor Database
KIOSK_MONITOR_DB_HOST=localhost
KIOSK_MONITOR_DB_PORT=5432
KIOSK_MONITOR_DB_NAME=kiosk_monitor_db
KIOSK_MONITOR_DB_USER=kiosk_monitor_user
KIOSK_MONITOR_DB_PASSWORD=kiosk_monitor_password

# CMS Database
CMS_DB_HOST=localhost
CMS_DB_PORT=5432
CMS_DB_NAME=cms_db
CMS_DB_USER=cms_user
CMS_DB_PASSWORD=cms_password

# Analytics Database
ANALYTICS_DB_HOST=localhost
ANALYTICS_DB_PORT=5432
ANALYTICS_DB_NAME=analytics_db
ANALYTICS_DB_USER=analytics_user
ANALYTICS_DB_PASSWORD=analytics_password

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
KIOSK_UI_PORT=3000
ADMIN_DASHBOARD_PORT=3001
REACT_APP_API_BASE_URL=http://localhost:8000

# ==========================================
# FILE STORAGE
# ==========================================
STORAGE_TYPE=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ==========================================
# NOTIFICATION SERVICES
# ==========================================
# SMS Provider (Twilio example)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email Provider (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@suvidha.gov.in

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ==========================================
# CORS
# ==========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ==========================================
# MONITORING
# ==========================================
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
